<p id="notice"><%= notice %></p>

<h1>Posts</h1>

 
  <div id="my_posts" class="row my-2">
   <% @posts.each do |post| %>
    <div class="col-4 my-2" >
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p>
          <%= link_to 'Show', post, class: "btn btn-outline-primary" %>
          <%= link_to 'Edit', edit_post_path(post),  class: "btn btn-outline-primary" %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
  
  </div>



<%= form_with(model: @post, remote: true,  data: { confirm: 'Are you sure?' } ) do |form| %>
  <div class="form-group p-4 my-4 shadow-sm rounded">
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title , class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_field :content, class: "form-control"  %>
    </div>

    <div class="actions">
      <%= form.submit "Agregar", data: { disable_with: 'Guardando...' }, class: "btn btn-primary" %>
      <!-- <%= link_to 'Submit', posts_path, method: :post %> -->
    </div>
  </div>
<% end %>

